{
  "name": "aem-quicklinks-extension",
  "version": "1.0.0",
  "description": "Chrome extension with useful AEM links",
  "type": "module",
  "scripts": {
    "build": "esbuild popup.js --bundle --outfile=popup.bundle.js --format=iife",
    "watch": "esbuild popup.js --bundle --outfile=popup.bundle.js --format=iife --watch",
    "test": "node --experimental-vm-modules node_modules/jest/bin/jest.js",
    "test:watch": "node --experimental-vm-modules node_modules/jest/bin/jest.js --watch",
    "test:coverage": "node --experimental-vm-modules node_modules/jest/bin/jest.js --coverage"
  },
  "keywords": ["aem", "chrome-extension"],
  "author": "",
  "license": "MIT",
  "devDependencies": {
    "@jest/globals": "^29.7.0",
    "esbuild": "^0.24.0",
    "jest": "^29.7.0",
    "jest-environment-jsdom": "^29.7.0"
  }
}
